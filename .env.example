NODE_ENV=development

# Admin controls
ADMIN_ENABLED=true
ADMIN_AUTH_ENABLED=false
ADMIN_AUTH_USER=admin
ADMIN_AUTH_PASS=changeme

# Content store provider: fs | mock
CONTENT_STORE_PROVIDER=fs
NEXT_PUBLIC_CONTENT_STORE_PROVIDER=fs

# Publishing (GitHub)
CONTENT_PUBLISH_PROVIDER=github
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo
GITHUB_TOKEN=
GITHUB_BRANCH=main
PUBLISH_MODE=commit

# Contact providers: mock | resend | sendgrid
CONTACT_PROVIDER=mock
CONTACT_FROM_EMAIL=no-reply@example.com
CONTACT_TO_EMAIL=owner@example.com
CONTACT_API_KEY=

# Analytics
ANALYTICS_PROVIDER=none
GA4_ID=
PLAUSIBLE_DOMAIN=

# Adsense
ADSENSE_ENABLED=false
ADSENSE_PUBLISHER_ID=


