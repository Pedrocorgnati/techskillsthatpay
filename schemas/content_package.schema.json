{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meta", "global", "locales"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["translationKey", "createdAt", "updatedAt", "source", "publishAllLocales", "localesIncluded"],
      "properties": {
        "translationKey": {"type": "string"},
        "createdAt": {"type": "string"},
        "updatedAt": {"type": "string"},
        "source": {"type": "string", "enum": ["creator", "translator", "manual"]},
        "publishAllLocales": {"type": "boolean"},
        "localesIncluded": {"type": "array", "items": {"type": "string"}}
      }
    },
    "global": {
      "type": "object",
      "required": ["author", "blogUrl", "linkPolicy", "defaultAffiliateDisclosure"],
      "properties": {
        "author": {"type": "string"},
        "blogUrl": {"type": "string"},
        "linkPolicy": {"type": "string", "enum": ["no-links", "blog-only", "blog-and-affiliate"]},
        "defaultAffiliateDisclosure": {"type": "boolean"},
        "theme": {"type": "string"}
      }
    },
    "locales": {
      "type": "object",
      "required": ["en"],
      "properties": {
        "en": {"$ref": "#/definitions/localeEntry"},
        "pt": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]},
        "es": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]},
        "it": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]}
      }
    }
  },
  "definitions": {
    "affiliateEntry": {
      "type": "object",
      "required": ["enabled", "url", "disclosure"],
      "properties": {
        "enabled": {"type": "boolean"},
        "url": {"type": "string"},
        "disclosure": {"type": "string"}
      }
    },
    "localeEntry": {
      "type": "object",
      "required": ["title", "description", "slug", "content"],
      "properties": {
        "title": {"type": "string"},
        "description": {"type": "string"},
        "slug": {"type": "string"},
        "content": {"type": "string"},
        "keywords": {"type": "array", "items": {"type": "string"}},
        "tags": {"type": "array", "items": {"type": "string"}},
        "category": {"type": "string"},
        "affiliate": {"$ref": "#/definitions/affiliateEntry"}
      }
    }
  }
}
