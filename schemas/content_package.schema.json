{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdminPublishPayload",
  "type": "object",
  "required": ["global", "localized"],
  "properties": {
    "global": {
      "type": "object",
      "required": ["translationKey", "author", "coverImage", "affiliateDisclosure", "date"],
      "properties": {
        "translationKey": {"type": "string"},
        "author": {"type": "string"},
        "coverImage": {"type": "string"},
        "affiliateDisclosure": {"type": "boolean"},
        "date": {"type": "string"},
        "blogUrl": {"type": "string"},
        "linkPolicy": {"type": "string"},
        "defaultAffiliateDisclosure": {"type": "boolean"},
        "theme": {"type": "string"},
        "source": {"type": "string"}
      }
    },
    "localized": {
      "type": "object",
      "required": ["en"],
      "properties": {
        "en": {"$ref": "#/definitions/localeEntry"},
        "pt": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]},
        "es": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]},
        "it": {"anyOf": [{"$ref": "#/definitions/localeEntry"}, {"type": "object"}]}
      }
    }
  },
  "definitions": {
    "localeEntry": {
      "type": "object",
      "required": ["title", "description", "slug", "content", "category", "tags"],
      "properties": {
        "title": {"type": "string"},
        "description": {"type": "string"},
        "slug": {"type": "string"},
        "content": {"type": "string"},
        "keywords": {
          "anyOf": [
            {"type": "array", "items": {"type": "string"}},
            {"type": "string"}
          ]
        },
        "tags": {
          "anyOf": [
            {"type": "array", "items": {"type": "string"}},
            {"type": "string"}
          ]
        },
        "category": {"type": "string"}
      }
    }
  }
}
